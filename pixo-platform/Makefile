
GO_BIN ?= $$(go env GOPATH)/bin

all: lint test

update:
	@echo "ðŸ”„ Updating Pixo utilities..."
	@go get github.com/PixoVR/pixo-golang-clients/pixo-platform@0.1.5
	@go mod tidy

lint:
	@echo "ðŸª® Linting..."
	@golangci-lint run --timeout 5m

test:
	@echo "ðŸ§ª Running tests with coverage..."
	@IS_LOCAL=true go test ./... -coverprofile=./cover.out -covermode=atomic -coverpkg=./...

coverage: test
	@echo "ðŸ§ª Checking test coverage threshold..."
	@${GO_BIN}/go-test-coverage --config=./.coverage.yaml

